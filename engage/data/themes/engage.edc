				target: "label.clip";				\
			}										\
			program {								\
				name: "go_label_hide";				\
				signal: "e,state,label,hide";		\
				source: "e";						\
				action: STATE_SET "default" 0.0;	\
				transition: ACCELERATE 0.25;		\
				target: "label.clip";				\
			}										\
		}											\
	}

	LABEL("bottom", 1, 0.5 1.0);
	LABEL("top",    0, 0.5 0.0);
	LABEL("left",   0, 0.0 0.5);
	LABEL("right",  0, 1.0 0.5);
	
